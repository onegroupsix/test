<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.asus.burnnews.bean.FlowLayout
            android:layout_marginTop="10dp"
            android:id="@+id/id_flowlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_shape"></com.example.asus.burnnews.bean.FlowLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

   <com.example.asus.burnnews.bean.FlowLayout
       android:padding="20dp"
       android:id="@+id/id_flowlayout2"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background="@color/light_grey"></com.example.asus.burnnews.bean.FlowLayout>

</LinearLayout>